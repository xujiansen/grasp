<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="66dip"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dip" >

        <cn.com.rooten1.ctrl.widget.RoundImageView
            android:id="@+id/user_list_item_icon"
            android:layout_width="55dip"
            android:layout_height="55dip"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/list_item_title_size" />

            <TextView
                android:id="@+id/user_list_item_jgmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/list_item_value_size" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="13dip">

            <ImageView
                android:id="@+id/user_list_item_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="6dip"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/user_list_item_add_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:layout_gravity="center"
                android:textColor="#eaeaea"
                android:textSize="16sp"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>