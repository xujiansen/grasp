<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/image_progress_load_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <cn.com.rooten.ctrl.widget.RoundProgressBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_progress_load_bar"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_gravity="center"
        app:roundWidth="5dip"
        app:style="STROKE"
        app:max="100"
        app:textIsDisplayable="false"
        app:roundColor="#223498db"
        app:roundProgressColor="@color/button_selected"/>

</FrameLayout>